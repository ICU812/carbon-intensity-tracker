{
  "name": "carbon-intensity-tracker-api",
  "version": "1.0.0",
  "description": "API that allows users to read, update, delete and store national carbon intensity values",
  "type": "module",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/app.js",
    "seed": "node --loader ts-node/esm ./src/db/seed.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "clean": "rimraf dist && rimraf node_modules && rimraf package-lock.json",
    "lint": "eslint . --cache",
    "lint:ci": "eslint . --max-warnings 0",
    "format": "prettier . --write"
  },
  "author": "Calum Brunt",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "express": "^5.1.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.24"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/csv-parse": "^1.1.12",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.0",
    "csv-parse": "^5.6.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  }
